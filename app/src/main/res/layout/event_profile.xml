<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/event_ptitle"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Uniqure Id"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_start_time"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_venue_address"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_city_name"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_region_name"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_country_name"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_country_abbr"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.53"
        android:text="New Text" />


</LinearLayout>